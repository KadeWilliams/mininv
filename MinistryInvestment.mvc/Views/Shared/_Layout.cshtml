@using System.Reflection
@model MinistryInvestment.Mvc.ViewModels.BaseViewModel
<!DOCTYPE html>
<html lang="en" id="pageStart" style="opacity:0">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Ministry Investments</title>
    <link rel="stylesheet" href="~/css/app.bundle.css" asp-append-version="true" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/img/toolkit/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/toolkit/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/img/toolkit/favicon-16x16.png">
    <link rel="mask-icon" href="~/img/toolkit/safari-pinned-tab.svg" color="#ef4317">
    <link rel="shortcut icon" href="~/img/toolkit/favicon.ico">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-config" content="~/img/toolkit/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
</head>
<body>
    <hl-non-production-bar></hl-non-production-bar>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-light fixed-top">
            <div class="container">
                <a class="navbar-brand me-3 nav-brand-font" href="@Url.Action("Index", "Home")">
                    <img src="~/img/toolkit/hl-logo.svg" width="180" class="d-block align-top mb-1" alt="Hobby Lobby">
                    Ministry Investments
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto">
                        @if (Model.MenuPermissions.HasReadPermissions)
                        {
                            @if (Model.MenuPermissions.HasEditPermissions)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href='@Url.Action("Index", "Organization")'>Add Organization</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" href='@Url.Action("Index", "Search")'>Search</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" target="_blank" href="@Model.MinistryInvestmentConfig.ReportsURL">Reports</a>
                            </li>

                            @if (Model.MenuPermissions.HasAdminPermissions)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" tabindex="0" data-bs-toggle="dropdown" data-submenu>Maintenance</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href='@Url.Action("Index", "Categories")'>Categories</a>
                                            <a class="dropdown-item" href='@Url.Action("Index", "Regions")'>Regions</a>
                                            <a class="dropdown-item" href='@Url.Action("Index", "PartnerTypes")'>Partner Types</a>
                                            <a class="dropdown-item" href='@Url.Action("Index", "ContactTypes")'>Contact Types</a>
                                            <a class="dropdown-item" href='@Url.Action("Index", "ProjectTypes")'>Project Types</a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="opacity:0">none</a>
                            </li>
                        }
                    </ul>
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        string name = Context.User.Claims.FirstOrDefault(c => c.Type == "hl:profile:name")?.Value;
                        <ul class="navbar-nav ms-auto my-2">
                            <li>
                                @if (!string.IsNullOrEmpty(name))
                                {
                                    <i class="fas fa-user pe-2"></i> @name
                                }
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline ms-2" id="formLogout">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Logout<i class="fa-solid fa-right-from-bracket ms-2"></i></button>
                                </form>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ms-auto my-2">
                            <li>
                                <form asp-controller="Account" asp-action="Login" method="post" class="d-inline ms-2">
                                    <button type="submit" class="btn btn-sm btn-outline-dark"><i class="fa-solid fa-user pe-2"></i>Login</button>
                                </form>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <main id="main">
        <div class="m-2 body-content">
            @RenderBody()
        </div>
    </main>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    Copyright &copy; Hobby Lobby Stores, Inc.
                </div>
                <div class="col-md-6 text-end">
                    Version: @(Assembly.GetEntryAssembly().GetCustomAttribute<AssemblyInformationalVersionAttribute>().InformationalVersion)
                </div>
            </div>
        </div>
    </footer>
    <script src="~/js/app.bundle.js" asp-append-version="true"></script>
    <script src="~/js/Timer.js"></script>
    @RenderSection("scripts", required: false)
</body>

<div class="modal fade" id="timeout" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Session Timeout</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                You are about to be logged out because you have been idle too long. Click "Continue" to reset the timeout and continue your session.
                <br /><br />
                You will be logged out in <span id="time"></span> minutes.
            </div>
            <div class="modal-footer">
                <button type="button" id="btnContinue" class="btn btn-primary continueBtn" data-bs-dismiss="modal">Continue</button>
            </div>
        </div>
    </div>
</div>

</html>

<style>
    .noHover {
        pointer-events: none;
    }

    .detailHeaderLabel {
        text-align: left;
        width: 135px;
        padding: 10px 5px;
    }

    [class="option active"] {
        background-color: gainsboro !important;
    }

    .dropdown-item:hover {
        background-color: gainsboro !important;
        color: #1E1E21 !Important;
    }

    .ts-control:focus {
        border-color: #86b7fe;
        outline: 0;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .form-control:focus {
        border-color: #86b7fe;
        outline: 0;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .btn {
        min-width: 50px
    }

    [class="card-header bg-primary"] {
        color: white !important;
    }

    p {
        font-size: 15px;
    }

    a {
        color: black;
        text-decoration: none;
        font-weight: normal;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        float: left;
        font-size: large;
        padding-right: var(--bs-breadcrumb-item-padding-x);
        color: var(--bs-breadcrumb-divider-color);
        content: var(--bs-breadcrumb-divider, "\279C") /* rtl: var(--bs-breadcrumb-divider, "/") */;
        transform: rotate(180deg);
        padding: 0;
    }
</style>

<script>
    const timer = new Timer(@Model.MinistryInvestmentConfig.LogOutWarningMinutes,
    @Model.MinistryInvestmentConfig.LogOutMinutes,
        "@Url.ActionLink("KeepSessionAlive")",
        "@Url.ActionLink("GetLastSessionTime")");
    timer.reset();
    $(document).ready(function () {
        $("#btnContinue").on("click", async () => {
            await timer.keepSessionAlive();
        })
        $('#timeout').modal('hide');
    });

    function loadPage() {
        document.getElementById("pageStart").style.opacity = "1";
    }
    //global DataTable definition
    DataTable.type('month/year', { //Custom Datatable type for datetime sorting
        detect: function (d) {
            if (!(/^(0[1-9]|1[0-2])(\/)(20)\d{2}$/.test(d))) {
                return null;
            }
            ds = d.split('/')
            var parsed = Date.parse(ds[0] + '/01/' + ds[1]);
            return (parsed !== null && !isNaN(parsed));
        },
        order: {
            pre: function (a) {
                let parts = a.split('/');
                var x = parts[1] * 100 + parts[0];
                return x;
            },
        },
    });

    DataTable.type('Email', { //Custom Datatable type for email sorting
        detect: function (d) {
            if (/^[a-zA-Z0-9.!#$%&’*+/=?^_`{|}~-]+@@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/.test(d) || d == '') {
                return true;
            }
            return (null);
        },
        render: function (d) {
            if (d != '') {
                return '<a href="mailto:' + d + '?body=">' + d + ' <i class="fa-solid fa-envelope" ></i></a>'
            }
            return d
        }
    });

    DataTable.type('Phone_Number', { //Custom Datatable type for phone sorting
        detect: function (d) {
            if (/^(\+)?(\d{1,2})?[( .-]*(\d{3})[) .-]*(\d{3,4})[ .-]?(\d{4})$/.test(d) || d == '') {
                return true;
            }
            return (null);
        },
        render: function (d) {
            var p = `${d}`.replace(/[^0-9]+/g, '')
            if (d != '' && p.length >= 10) {
                return '<a href="tel:' + p.slice(-10) + '">' + d + ' <i class="fa-solid fa-phone"></i></a>'
            }
            return d
        }
    });

    new DataTable('.mytables', {
        scrollY: '500px',
        scrollCollapse: true,
        columnDefs: [
            {
                targets: 0, searchable: false, orderable: false,
            },
        ],
        order: []
    });

    new DataTable('#OrganizationsTable', {
        scrollY: '500px',
        scrollCollapse: true,
        order: []
    });
</script>