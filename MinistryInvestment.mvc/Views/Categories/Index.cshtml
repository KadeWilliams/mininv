@model MinistryInvestment.Mvc.ViewModels.CategoryViewModel

@section scripts
{
    <script>
        $(document).ready(function () {
            //page load
            window.onload = function () {
                if ("@Model.Error" == "True") {
                    $("#errorModal").modal("show");
                }
                loadPage();
            }
            //event handlers
            $("#tab-items-body").on("click", "#editCategoryBtn", function () {
                $("#addEditCategoryModal").modal("show");
                $("#Category_CategoryId").val($(this).data("categoryid"));
                $("#Category_CategoryName").val($(this).data("categoryname"));
            });

            $("#tab-items-body").on("click", "#deleteCategoryBtn", function () {
                $("#deleteModal").modal("show");
                $("#Category_CategoryId").val($(this).data("categoryid"));
                $("#Category_CategoryName").val('-1');
            });

            $("#addEditCategoryBtn").on("click", function () {
                $("#addEditCategoryModal").modal("show");
                $("#Category_CategoryId").val(0);
                $("#Category_CategoryName").val(null);

            });

            $("#addEditCategoryModal").on('hidden.bs.modal', function () {
                $("#Category_CategoryId").val(0);
                $("#Category_CategoryName").val(null);
                $(".field-validation-error").empty();
            });

            $("#deleteModal").on('hidden.bs.modal', function () {
                $("#Category_CategoryId").val(0);
                $("#Category_CategoryName").val(null);
            });
        })
    </script>
}

@using (Html.BeginForm("SaveCategory", "Categories", FormMethod.Post, new { id = "newCategoryForm" }))
{
    @Html.HiddenFor(m => m.Category.CategoryId)
    <div class="modal fade" id="addEditCategoryModal" tabindex="-1" role="dialog" data-backdrop="static" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Category</h5><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="col">
                        <div class="row mt-1">
                            @Html.LabelFor(m => m.Category.CategoryName)
                            <div class="col">
                                @Html.EditorFor(m => m.Category.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(m => m.Category.CategoryName)
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="saveCategoryBtn">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="card">
                <div class="card-header bg-primary">
                    <h5>Categories</h5>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-striped table-bordered mytables" id="CategoriesTable">
                        <thead>
                            <tr class="align-middel">
                                <th class="text-center">
                                    <button type="button" id="addEditCategoryBtn" class="btn btn-success"><i class="fa fa-plus"></i></button>
                                </th>
                                <th style="width:80%">Category Name</th>
                            </tr>
                        </thead>
                        <tbody id="tab-items-body">
                            @foreach (var ca in Model.Categories)
                            {
                                <tr class="align-middle">
                                    <td class="text-center">
                                        <button type="button" class="btn btn-primary" id="editCategoryBtn"
                                                data-CategoryId="@ca.CategoryId"
                                                data-CategoryName="@ca.CategoryName">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                        <button type="button" class="btn btn-danger" id="deleteCategoryBtn"
                                                data-CategoryId="@ca.CategoryId">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                    <td>
                                        @ca.CategoryName
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="deleteModal" role="dialog" data-backdrop="static" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content text-center">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Category</h5><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <p class="modal-body">Are you sure you want to delete category.</p>
                <div class="modal-footer">
                    <input type="button" value="Yes" style="vertical-align:middle;" class="btn btn-danger float-center" onclick="submit()">
                    <input type="button" value="No" style="vertical-align:middle;" class="btn btn-secondary float-center" data-bs-dismiss="modal">
                </div>
            </div>
        </div>
    </div>
}

<div class="modal fade" id="errorModal" role="dialog" data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content text-center">
            <div class="modal-header">
                <h5 class="modal-title">Error</h5><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <p class="modal-body">An error has occured when modifying contact type. If you are trying to delete make sure it is not in use.</p>
            <div class="modal-footer">
                <input type="button" value="Ok" style="vertical-align:middle;" class="btn btn-primary float-center" data-bs-dismiss="modal">
            </div>
        </div>
    </div>
</div>